<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:background="@color/color_started"
	
	>
	
	

	<RelativeLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:text="Project name" android:id="@+id/textNameLabelPD"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:textSize="12dip" android:paddingTop="22dip" android:layout_width="wrap_content"
			android:textStyle="bold"
			
			
			 />

		<TextView android:text="DELME"
			android:id="@+id/textNamePD" android:layout_height="wrap_content"
			android:textSize="16dip" android:textColor="@color/color_text"
			android:paddingTop="6dip"
			android:paddingLeft="10dip"
			android:layout_width="wrap_content"
			android:layout_below="@id/textNameLabelPD"
			 />


	<!--  ITERATION LENGTH -->
		<TextView android:text="Iteration length" android:id="@+id/textIterationLengthLabelPD"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:textSize="12dip" android:paddingTop="18dip" android:layout_width="wrap_content"
			android:textStyle="bold"
			
			android:layout_below="@id/textNamePD"
			 />
			 
		<TextView
			android:text="2 weeks"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:id="@+id/textIterationLengthPD" android:textSize="12dip"
			android:paddingTop="2dip" android:paddingBottom="10dip" android:layout_width="wrap_content" 
			android:layout_below="@id/textIterationLengthLabelPD"
			/>

	<!--  ITERATION START -->
		<TextView android:text="Iteration starts on" android:id="@+id/textWeekStartDayLabelPD"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:textSize="12dip" android:paddingTop="18dip" android:layout_width="wrap_content"
			android:textStyle="bold"
			
			android:layout_below="@id/textIterationLengthPD"
			 />
			 
		<TextView
			android:text="Monday"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:id="@+id/textWeekStartDayPD" android:textSize="12dip"
			android:paddingTop="2dip" android:paddingBottom="10dip" android:layout_width="wrap_content" 
			android:layout_below="@id/textWeekStartDayLabelPD"
			/>

	<!--  POINT SCALE -->
		<TextView android:text="Point scale" android:id="@+id/textPointScaleLabelPD"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:textSize="12dip" android:paddingTop="18dip" android:layout_width="wrap_content"
			android:textStyle="bold"
			
			android:layout_below="@id/textWeekStartDayPD"
			 />
			 
		<TextView
			android:text="1,2,3,4"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:id="@+id/textPointScalePD" android:textSize="12dip"
			android:paddingTop="2dip" android:paddingBottom="10dip" android:layout_width="wrap_content" 
			android:layout_below="@id/textPointScaleLabelPD"
			/>



	</RelativeLayout>
</ScrollView>