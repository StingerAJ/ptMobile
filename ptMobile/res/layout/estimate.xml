<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:background="@color/color_started"
	
	>
	
	

	<RelativeLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:text="Story name" android:id="@+id/textNameLabelEST"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:textSize="12dip" android:paddingTop="22dip" android:layout_width="wrap_content"
			android:textStyle="bold"
			
			
			 />

		<TextView android:text="Dies ist eine lustige kleine Story. Jo jo once upon a time."
			android:id="@+id/textNameEST" android:layout_height="wrap_content"
			android:textSize="16dip" android:textColor="@color/color_text"
			android:paddingTop="6dip"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:layout_width="wrap_content"
			android:layout_below="@id/textNameLabelEST"
			 />


	<!--  ITERATION LENGTH -->
		<TextView android:text="Estimate" android:id="@+id/textEstimateLabelEST"
		android:paddingLeft="10dip"
			android:layout_height="wrap_content" android:textColor="@color/color_text"
			android:textSize="12dip" android:paddingTop="18dip" android:layout_width="wrap_content"
			android:textStyle="bold"
			
			android:layout_below="@id/textNameEST"
			 />
			 
		<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:padding = "5px" android:layout_below="@id/textEstimateLabelEST">

    <TableRow>
<Button android:text="0 points" android:id="@+id/ButtonEstimate0" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></Button>
<Button android:text="1 point" android:id="@+id/ButtonEstimate1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></Button>
    </TableRow>
     <TableRow>
<Button android:text="2 points" android:id="@+id/ButtonEstimate2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></Button>
<Button android:text="3 point" android:id="@+id/ButtonEstimate3" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></Button>
    </TableRow>
     <TableRow>
<Button android:text="4 points" android:id="@+id/ButtonEstimate4" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></Button>
<Button android:text="5 point" android:id="@+id/ButtonEstimate5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></Button>
    </TableRow>
</TableLayout>


	</RelativeLayout>
</ScrollView>