<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ScrollView android:layout_width="fill_parent"
		android:layout_weight="1" android:layout_height="0px"
		android:background="@color/color_started">

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:text="12    2009-12-80 > 2009-06-12"
				android:id="@+id/textIterationStoryDetails" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@color/color_iteration_bg"
				android:paddingTop="5dip" android:paddingBottom="3dip"
				android:paddingLeft="12dip" android:textColor="@color/color_iteration"
				android:textSize="11dip" />

			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/imageTypeStoryDetails"
				android:src="@drawable/feature" android:paddingTop="8dip"
				android:layout_below="@id/textIterationStoryDetails"
				android:paddingLeft="10dip" />

			<TextView android:text="feature" android:id="@+id/textTypeStoryDetails"
				android:layout_height="wrap_content" android:textColor="@color/color_text"
				android:textSize="12dip" android:paddingLeft="5dip"
				android:paddingTop="10dip" android:layout_toRightOf="@id/imageTypeStoryDetails"
				android:layout_below="@id/textIterationStoryDetails"
				android:layout_width="wrap_content" />

			<TextView android:text="yo, cool, aktHist" android:id="@+id/textLabelsStoryDetails"
				android:textColor="@color/color_labels" android:layout_height="wrap_content"
				android:textSize="12dip" android:textStyle="bold"
				android:paddingRight="15dip" android:paddingTop="10dip"
				android:layout_width="wrap_content" android:layout_below="@id/textIterationStoryDetails"
				android:layout_alignParentRight="true" />

			<TextView
				android:text="This is a little story. Once upon a time in land far far away, there was a price"
				android:id="@+id/textNameStoryDetails" android:layout_height="wrap_content"
				android:textSize="16dip" android:textColor="@color/color_text"
				android:paddingTop="15dip" android:paddingLeft="10dip"
				android:paddingRight="10dip" android:layout_width="wrap_content"
				android:layout_below="@id/imageTypeStoryDetails" />

			<TextView android:text="not yet started" android:id="@+id/textStateStoryDetails"
				android:paddingLeft="10dip" android:layout_height="wrap_content"
				android:textColor="@color/color_text" android:textSize="12dip"
				android:paddingRight="5dip" android:paddingTop="8dip"
				android:layout_width="wrap_content" android:layout_below="@id/textNameStoryDetails" />

			<TextView android:text="13 points" android:id="@+id/textEstimateStoryDetails"
				android:layout_height="wrap_content" android:textColor="@color/color_text"
				android:textSize="12dip" android:paddingRight="15dip"
				android:paddingTop="8dip" android:layout_width="wrap_content"
				android:layout_below="@id/textNameStoryDetails"
				android:layout_alignParentRight="true" />

			<TextView android:text="Description"
				android:id="@+id/textDescriptionLabelStoryDetails"
				android:paddingLeft="10dip" android:layout_height="wrap_content"
				android:textColor="@color/color_text" android:textSize="12dip"
				android:paddingTop="22dip" android:layout_width="wrap_content"
				android:textStyle="bold" android:layout_below="@id/textStateStoryDetails" />

			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/imageDecriptionStoryDetails"
				android:src="@drawable/story_flyover_icon" android:paddingTop="22dip"
				android:paddingLeft="3dip" android:layout_toRightOf="@id/textDescriptionLabelStoryDetails"
				android:layout_below="@id/textStateStoryDetails" />

			<TextView
				android:text="lasdf aksdjf lk asdkfj laksdjf lkas dlfk l jksdfj lkjsadf
		asdfasd asdf asdf a
		asdfa  asdfa a dfas dfa asdfa adf
		asdf asd asdfadsa asdf "
				android:paddingLeft="10dip" android:paddingRight="10dip"
				android:layout_height="wrap_content" android:textColor="@color/color_text"
				android:id="@+id/textDescriptionStoryDetails" android:textSize="12dip"
				android:paddingTop="6dip" android:paddingBottom="10dip"
				android:layout_width="wrap_content" android:layout_below="@id/textDescriptionLabelStoryDetails" />

			<TextView android:text="Comments" android:id="@+id/textCommentsLabelSD"
				android:paddingLeft="10dip" android:layout_height="wrap_content"
				android:textColor="@color/color_text" android:textSize="12dip"
				android:paddingTop="12dip" android:layout_width="wrap_content"
				android:textStyle="bold" android:layout_below="@id/textDescriptionStoryDetails" />

			<TextView android:text="Comments" android:paddingLeft="10dip"
				android:paddingRight="10dip" android:textColor="@color/color_text"
				android:id="@+id/textCommentsSD" android:layout_height="wrap_content"
				android:textSize="12dip" android:paddingTop="6dip"
				android:layout_width="wrap_content" android:layout_below="@id/textCommentsLabelSD" />
			
			<TextView android:text="Requested by Niels (24.03.2003 xxx)"
				android:paddingLeft="10dip" android:id="@+id/textRequestedByStoryDetails"
				android:textColor="@color/color_text" android:layout_height="wrap_content"
				android:textSize="12dip" android:paddingTop="10dip"
				android:layout_width="wrap_content" android:layout_below="@id/textCommentsSD" />


			<TextView android:text="Owned by Niels (accepted at 24.03.2003 xxx)"
				android:paddingLeft="10dip" android:id="@+id/textOwnedByStoryDetails"
				android:textColor="@color/color_text" android:layout_height="wrap_content"
				android:textSize="12dip" android:paddingTop="10dip"
				android:layout_width="wrap_content" android:layout_below="@id/textRequestedByStoryDetails" />

			<TextView android:text="Deadline: xx.yy.zzzz"
				android:paddingLeft="10dip" android:textColor="@color/color_text"
				android:id="@+id/textDeadlineStoryDetails" android:layout_height="wrap_content"
				android:textSize="12dip" android:paddingTop="10dip"
				android:layout_width="wrap_content" android:layout_below="@id/textOwnedByStoryDetails" />

		
</RelativeLayout>

	</ScrollView>

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="3px" android:background="@color/color_iteration_bg">

		<TableRow>
			<Button android:text="start" android:id="@+id/btn1SD"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1"></Button>
			<Button android:text="start" android:id="@+id/btn2SD"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1"></Button>
			<Button android:text="start" android:id="@+id/btn3SD"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1"></Button>

		</TableRow>
	</TableLayout>

</LinearLayout>

